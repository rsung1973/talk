        </TableLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/logger_callback_bkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logger_call_bkg"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/logger_callback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="@string/logger_callback_text"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/logger_callback_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/logger_callback_text"
            android:gravity="left"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>