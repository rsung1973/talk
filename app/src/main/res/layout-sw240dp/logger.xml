            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="bottom|center"
                android:orientation="horizontal" >

                <com.dnake.widget.Button2
                    android:id="@+id/logger_btn_callback"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/logger_btn_callback" />

                <com.dnake.widget.Button2
                    android:id="@+id/logger_btn_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logger_btn_up" />

                <com.dnake.widget.Button2
                    android:id="@+id/logger_btn_down"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logger_btn_down" />

                <com.dnake.widget.Button2
                    android:id="@+id/logger_btn_backup"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logger_btn_backup" />

                <com.dnake.widget.Button2
                    android:id="@+id/logger_btn_del"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logger_btn_del" />

                <com.dnake.widget.Button2
                    android:id="@+id/logger_btn_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
