<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/talk_dtmf_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" >

        <TextView
            android:id="@+id/talk_dtmf_text"
            android:layout_width="226dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/talk_dtmf_text"
            android:paddingLeft="8dp"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/talk_dtmf_1"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="1"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_2"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@+id/talk_dtmf_1"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="2"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_3"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@+id/talk_dtmf_2"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="3"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_4"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/talk_dtmf_1"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="4"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_5"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_below="@+id/talk_dtmf_2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/talk_dtmf_1"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="5"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_6"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_below="@+id/talk_dtmf_3"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/talk_dtmf_2"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="6"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_7"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/talk_dtmf_4"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="7"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_8"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_below="@+id/talk_dtmf_5"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/talk_dtmf_1"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="8"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_9"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_below="@+id/talk_dtmf_6"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/talk_dtmf_2"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="9"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_A"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/talk_dtmf_7"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="*"
            android:text="*"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_0"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_below="@+id/talk_dtmf_8"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/talk_dtmf_1"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="0"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/talk_dtmf_B"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:layout_below="@+id/talk_dtmf_9"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/talk_dtmf_2"
            android:background="@drawable/talk_dtmf"
            android:gravity="center"
            android:tag="#"
            android:text="#"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>